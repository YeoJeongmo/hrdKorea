<%
Connection conn = null;
Statement stmt = null;

String mode = request.getParameter("mode");

try{
	conn = Util.getConnection();
	stmt = conn.createStatement();
	String sql = " ";
	
	switch(mode){
	case "insert" :
		sql = "INSERT INTO member_tbl_02 VALUES (" + custno + "," + 
												"'" + custname + "'," + 
												"'" + phone + "," + 
												"'" + address + "," + 
												"TO_DATE('" + joindate + "', 'yyyy-MM-dd')," + //2021-07-15 to_date('20210715', 'yyyy-MM-dd')
												"'" + grade + "," + 
												"'" + city +")";
		stmt.executeUpdate(sql);
		break;
	case "modify" :
		sql = "UPDATE member_tbl_02 SET " +
				"custname = '" + custname + "'," +
				"phone = '" + phone + "'," +
				"address = '" + address + "'," +
				"joindate = TO_DATE('" + joindate + "', 'yyyy-MM-dd')," +
				"grade = '" + grade + "'," +
				"city = '" + city + "' " +
				"WHERE custno = " + custno ;
				//UPDATE member SET custname='임의정' WHERE custname='홍길동';
		stmt.executeUpdate(sql);
	}
} catch(Exception e){
	e.printStackTrace();
}
%>

</body>
